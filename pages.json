{
	"easycom": {
		"^u-(.*)": "@/uview-ui/components/u-$1/u-$1.vue"
	},
	"pages": [ //pages数组中第一项表示应用启动页，参考：https://uniapp.dcloud.io/collocation/pages
		{
			"name": "index",
			"path": "pages/index/index",
			"style": {
				"navigationStyle": "custom",
				"enablePullDownRefresh": false
			},
			"meta": {
				"auth": false // 是否校验登录
			}
		}
	],
	"subPackages": [{
		"root": "data-package",
		"name": "data-package",
		"pages": [
			{
				"name": "login",
				"path": "pages/login/login",
				"style": {},
				"meta": {
					"auth": false // 是否校验登录
				}
			},
			{
				"name": "home",
				"path": "pages/home/home",
				"style": {},
				"meta": {
					"auth": true // 是否校验登录
				}
			},
			{
				"name": "demo-list",
				"path": "pages/demo/list",
				"style": {},
				"meta": {
					"auth": false // 是否校验登录
				}
			},
			{
				"name": "demo-list-slot",
				"path": "pages/demo/list-slot",
				"style": {},
				"meta": {
					"auth": false // 是否校验登录
				}
			},
			{
				"name": "demo-notify",
				"path": "pages/demo/notify",
				"style": {},
				"meta": {
					"auth": false // 是否校验登录
				}
			},
			{
				"name": "demo-details",
				"path": "pages/demo/details",
				"style": {},
				"meta": {
					"auth": false // 是否校验登录
				}
			}
		]
	}],
	"preloadRule": {
		"data-package/pages/login/login": {
			"network": "all",
			"packages": ["data-package"]
		},
		"data-package/pages/home/home": {
			"network": "all",
			"packages": ["data-package"]
		},
		"data-package/pages/demo/list": {
			"network": "all",
			"packages": ["data-package"]
		},
		"data-package/pages/demo/list-slot": {
			"network": "all",
			"packages": ["data-package"]
		},
		"data-package/pages/demo/notify": {
			"network": "all",
			"packages": ["data-package"]
		},
		"data-package/pages/demo/details": {
			"network": "all",
			"packages": ["data-package"]
		}
	},
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "",
		"navigationBarBackgroundColor": "#F8F8F8",
		"backgroundColor": "#FFFFFF",
		"backgroundColorTop":"#FFFFFF", // iOS APP真机bounce回弹区域默认灰色,建议统一重置为白色
		"enablePullDownRefresh": false ,// 关闭uniapp的下拉刷新，使用第三方组件z-paging做下拉刷新及上拉加载更多
		"navigationStyle": "custom" // 使用自定义导航栏
	},
	"uniIdRouter": {}
}
